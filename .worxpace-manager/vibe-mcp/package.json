{
  "name": "vibe-mcp",
  "version": "0.1.0",
  "description": "MCP server that generates music based on code context",
  "private": true,
  "type": "module",
  "main": "index.js",
  "bin": {
    "vibe-mcp": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.7.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.0.0",
    "speaker": "^0.5.5",
    "uuid": "^11.1.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^8.23.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.3.3"
  }
}
