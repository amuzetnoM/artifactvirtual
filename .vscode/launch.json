{
    "configurations": [
        {
            "name": "Run JavaScript Sample",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "outputCapture": "std",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Run Python Sample",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "redirectOutput": false,
            "request": "launch",
            "type": "debugpy"
        }
    ]
}
{
  "mcpServers": {
    "vibe-mcp": {
      "autoApprove": [
        "start_vibe_session",
        "generate_more_music",
        "stop_vibe_session"
      ],
      "command": "node",
      "args": ["/path/to/vibe-mcp/build/index.js"],
      "env": {
        "STABLE_AUDIO_KEY": "your_stable_audio_key_here",
        "PIAPI_KEY": "your_piapi_key_here"
      }
    }
  }
}